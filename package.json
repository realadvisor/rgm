{
  "name": "rgm",
  "version": "0.1.1",
  "description": "Tiny but very powerful React Google Map",
  "author": "TrySound, istarkov, realadvisor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/realadvisor/rgm.git"
  },
  "main": "dist/rgm.cjs.js",
  "module": "dist/rgm.esm.js",
  "typings": "dist/rgm.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "next dev",
    "build:doc": "rimraf ./rgm && DOCUMENTATION=true next build && next export -o rgm",
    "start:doc": "echo 'open at http://localhost:3000/rgm' && serve ./ -p 3000",
    "deploy:doc": "yarn build:doc && touch ./rgm/.nojekyll && gh-pages -d rgm -t true",
    "build:code": "rollup -c",
    "build:flow": "echo \"// @flow\n\nexport * from '../src/rgm'\" > dist/rgm.cjs.js.flow",
    "build": "rimraf dist && yarn build:code && yarn build:flow && cp ./src/*.d.ts ./dist",
    "prepublishOnly": "yarn build"
  },
  "peerDependencies": {
    "react": ">=16.13",
    "react-dom": ">=16.13"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-flow": "^7.9.0",
    "@babel/preset-modules": "^0.1.3",
    "@babel/preset-react": "^7.9.4",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@emotion/core": "^10.0.28",
    "@rollup/plugin-babel": "^5.0.0",
    "@rollup/plugin-replace": "^2.3.2",
    "@types/googlemaps": "^3.39.4",
    "@types/node": "^13.13.5",
    "@types/react": "^16.9.34",
    "babel-eslint": "^10.1.0",
    "brotli-size": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "flow-bin": "^0.125.1",
    "gh-pages": "^2.2.0",
    "gzip-size": "^5.1.1",
    "nanoevents": "^5.1.7",
    "next": "^9.3.6",
    "prettier": "^2.0.5",
    "prism-react-renderer": "^1.1.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-system": "^0.16.0-beta.1",
    "remarkable": "^2.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.10.0",
    "rollup-plugin-terser": "^5.3.0",
    "serve": "^11.3.0",
    "supercluster": "^7.0.0",
    "typescript": "^3.8.3",
    "typography": "^0.16.19"
  }
}
